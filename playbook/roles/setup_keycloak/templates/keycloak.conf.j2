# If the server should expose healthcheck endpoints.
#health-enabled=true

# If the server should expose metrics endpoints.
#metrics-enabled=true

# Admin User
bootstrap-admin-username={{ keycloak_admin_username }}
bootstrap-admin-password={{ keycloak_admin_pw }}

# DB-Config
db=postgres
db-url-host={{ database_full_domain }}
db-url-port={{ postgres_server_port }}
db-url-database={{ postgres_keycloak_db }}
db-schema={{ postgres_keycloak_db }}
db-username={{ postgres_keycloak_user }}
db-url-properties=?ssl=true&sslcert={{ keycloak_container_client_certs_dir }}/{{ ssl_cert_file_name }}&sslkey={{ keycloak_container_client_certs_dir }}/{{ keycloak_converted_key_name }}&sslrootcert={{ keycloak_container_client_certs_dir }}/{{ ssl_ca_file_name }}

# HTTP
# The file path to a server certificate or certificate chain in PEM format.
https-certificate-file={{ keycloak_container_server_certs_dir }}/{{ ssl_fullchain_cert_file_name }}

# The file path to a private key in PEM format.
https-certificate-key-file={{ keycloak_container_server_certs_dir }}/{{ ssl_key_file_name }}

# The proxy address forwarding mode if the server is behind a reverse proxy.
#proxy=reencrypt

# Do not attach route to cookies and rely on the session affinity capabilities from reverse proxy
#spi-sticky-session-encoder-infinispan-should-attach-route=false

# Hostname for the Keycloak server.
hostname={{ keycloak_server_address }}